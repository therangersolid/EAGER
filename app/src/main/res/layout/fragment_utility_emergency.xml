<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pk.eager.ReportFragments.UtilityEmergency">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Power"
                    style="@style/question"/>

                <CheckBox android:id="@+id/checkbox_utilityq1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power Out"
                    style="@style/checkbox"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Blocks"
                        style="@style/question"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/radioGroup_utility1">

                        <RadioButton android:id="@+id/radio_utilityq1_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq1_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2-5"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq1_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More Than 5"
                            style="@style/radioButton"
                            />

                    </RadioGroup>

                </LinearLayout>

                <CheckBox android:id="@+id/checkbox_utilityq1_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power Line Down"
                    style="@style/checkbox"
                    />
            </LinearLayout> <!-- End of question 1 layout -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Water"
                    style="@style/question"/>

                <CheckBox android:id="@+id/checkbox_utilityq2_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Main Break"
                    style="@style/checkbox"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Blocks"
                        style="@style/question"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/radioGroup_utility2"
                        android:clickable="false">

                        <RadioButton android:id="@+id/radio_utilityq2_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq2_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2-5"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq2_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More Than 5"
                            style="@style/radioButton"
                            />

                    </RadioGroup>

                </LinearLayout>
            </LinearLayout> <!-- End of question 2 layout -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Gas"
                    style="@style/question"/>

                <CheckBox android:id="@+id/checkbox_utilityq3_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas Main Break"
                    style="@style/checkbox"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Houses Affected"
                        style="@style/question"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/radioGroup_utility3"
                        android:clickable="false">

                        <RadioButton android:id="@+id/radio_utilityq3_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq3_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2-5"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq3_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More Than 5"
                            style="@style/radioButton"
                            />

                    </RadioGroup>

                </LinearLayout>

                <CheckBox android:id="@+id/checkbox_utilityq3_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas Line on Fire"
                    style="@style/checkbox"
                    />
            </LinearLayout> <!-- End of question 3 layout -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Telephone"
                    style="@style/question"/>

                <CheckBox android:id="@+id/checkbox_utilityq4_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landline Outage"
                style="@style/checkbox"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Houses Affected"
                        style="@style/question"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/radioGroup_utility4"
                        android:clickable="false">

                        <RadioButton android:id="@+id/radio_utilityq4_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq4_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2-5"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq4_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More Than 5"
                            style="@style/radioButton"
                            />

                    </RadioGroup>

                </LinearLayout>

                <CheckBox android:id="@+id/checkbox_utilityq4_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cellphone Outage"
                    style="@style/checkbox"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Blocks Affected"
                        style="@style/question"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/radioGroup_utility5"
                        android:clickable="false">

                        <RadioButton android:id="@+id/radio_utilityq4_d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq4_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2-5"
                            style="@style/radioButton"
                            />

                        <RadioButton android:id="@+id/radio_utilityq4_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More Than 5"
                            style="@style/radioButton"
                            />

                    </RadioGroup>

                </LinearLayout>
            </LinearLayout> <!-- End of question 4 layout -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_next_utilityEmergency"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="NEXT"/>

        </LinearLayout> <!-- End of the Parent Linear Layout -->
    </ScrollView>

</FrameLayout>
